{
  "name": "gatsby-mdx",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/buz-zard/gatsby-mdx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buz-zard/gatsby-mdx.git"
  },
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "format": "run-p format:*",
    "format:package-json": "sort-package-json package.json packages/*/package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.6.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.0",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "sort-package-json": "^1.17.0"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ]
  }
}
